public class GitHub {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int[] arr={2,-4,7};
        int count=0;
        int count2=0;
        for (int i = 0; i < arr.length; i++) {
            if(arr[i]>0){
                count++;
            }else{
                count2++;
            }
        }
        System.out.println(count);
        System.out.println(count2);
    }
}
